<section>
    <div class="container">
        <div class="row mt-3 ">
        <a href="/admin/add-products" class="btn btn-success ml-auto" >Add Products</a>
        </div>
        <table class="table  table-striped mt-5 tablestyle">
  <thead>
    <tr  class="bg-danger">
      
       <th scope="col">Tittle</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
       <th>Image</th>
      <th scope="col">Options</th>

     
    </tr>
  </thead>
  <tbody>
      {{#each products}}
    <tr>
      
      <td>{{this.Name}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.Description}}</td>
      <td><img style="width: 50px; height=50px" src="/product-images/{{this._id}}.jpg" alt=""></td>
      <td>
        <a href="/admin/edit-products/{{this._id}}" class="btn btn-primary">Edit</a>
        <a href="/admin/delete-products/{{this._id}}" class="btn btn-danger" onclick=" return confirm('Are you want to delete {{this.Name}} ?')">Delete</a>
      </td>
    </tr>
    {{/each}}
</table>
    </div>
</section>

<style>
  .tablestyle{
    box-shadow: 5px 5px 5px ;
  }
</style>