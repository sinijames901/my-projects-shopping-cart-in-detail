<section>
    <div class="container">
        <table class="table  table-warning mt-5">
  <thead>
    <tr  class="bg-danger">
        <th scope="col">Date</th>
        <th >Address</th>
        <th >Pincode</th>
        <th>Mobile</th>
        <th scope="col">Amount</th>
        <th scope="col">Payment</th>
        <th>Status</th>
        <th>Options</th>
    </tr>
  </thead>
  <tbody>
      {{#each orders}}
    <tr>
      
      <td>{{this.date}}</td>
      <td>{{this.deliveryDetails.address}}</td>
      <td>{{this.deliveryDetails.pincode}}</td>
      <td>{{this.deliveryDetails.mobile}}</td>
      <td>{{this.totalAmount}}</td>
      <td>{{this.paymentMethod}}</td>
      <td>{{this.status}}</td>



      <td>
        <a href="/view-order-products/{{this._id}}" class="btn btn-primary">View Products</a>
      </td>
    </tr>
    {{/each}}
</table>
    </div>
</section>

