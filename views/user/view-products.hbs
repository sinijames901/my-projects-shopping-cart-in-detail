 <section>
      <div class="container mt-5">
        <div class="row">
             {{#each products}}
          <div  class="col-md-3 p-3">
            <div class="card" style="ml-2;width: 15rem;height:23rem; background-color:rgb(253, 160, 160)">
              <img class="card-img-top" src="/product-images/{{this._id}}.jpg" alt="Card image cap" />
              <div class="card-body">
                <h5 class="card-title">{{this.Name}}</h5>
                <p class="card-text">Rs.{{this.Price}}</p>
                <p class="card-text">{{this.Description}}</p>
                <button onclick="addToCart('{{this._id}}')" class="btn btn-primary" >Add cart</button>
              </div>
            </div>
          </div>
         {{/each}}
        </div>
      </div>
    </section
 
 